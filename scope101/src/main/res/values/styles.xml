<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header1" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Paragraph" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="Paragraph.4" parent="Paragraph">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CheckItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textAppearance">@style/Paragraph.4</item>
        <item name="android:drawableStart">@drawable/bg_check</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
</resources>